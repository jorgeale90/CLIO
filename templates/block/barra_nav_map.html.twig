<nav class="navbar header-navbar pcoded-header">
    <div class="navbar-wrapper">
        <div class="navbar-logo">
            <a href="{{ path('app_home') }}">
                <img class="img-fluid" src="{{ asset('page/assets/images/logo_nav.png') }}" alt="Theme-Logo">
            </a>
            <a class="mobile-options">
                <i class="feather icon-more-horizontal"></i>
            </a>
        </div>

        <div class="navbar-container container-fluid">
            <ul class="nav-left">
                <li>
                    <a href="{{ path('app_home') }}"">
                    <i class="feather icon-home"></i>
                    </a>
                </li>
                <li>
                    <a href="#!" onclick="javascript:toggleFullScreen()">
                        <i class="feather icon-maximize full-screen"></i>
                    </a>
                </li>
            </ul>
            <ul class="nav-right">
                <li class="header-notification">
                    <div class="dropdown-primary dropdown" id="notifications-list">
                        <div class="dropdown-toggle" data-toggle="dropdown" id="notification-toogle">
                            <i class="feather icon-bell"></i>
                            <span class="badge bg-c-pink">{{ notification.userNotification | length }}</span>
                        </div>
                        <ul class="show-notification notification-view dropdown-menu" data-dropdown-in="fadeIn" data-dropdown-out="fadeOut">
                            <li>
                                <h6>Notifications</h6>
                                <label class="label label-danger">New</label>
                            </li>
                            {% for noty in notification.userNotification %}
                                <li>
                                    <div class="media">
                                        <img class="d-flex align-self-center img-radius" src="{{ asset('page/assets/images/avatar-4.jpg') }}" alt="Generic placeholder image">
                                        <div class="media-body">
                                            <h5 class="notification-user">{{ noty.user.firstname ~ ' ' ~ noty.user.lastname }}</h5>
                                            <p class="notification-msg">{{ noty.message }}</p>
                                            <span class="notification-time">{{ noty.createAt | date('Y-m-d h:i:s') }}</span>
                                        </div>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </li>
                <li class="user-profile header-notification">
                    <div class="dropdown-primary dropdown">
                        <div class="dropdown-toggle" data-toggle="dropdown">
                            {% for usua in usuario %}
                                {% if usua.firstname == app.user.firstname and usua.image != null %}
                                    <img src="{{ vich_uploader_asset(usua, 'imageFile', 'App\\Entity\\User') }}" class="img-radius" alt="{{ app.user.firstname }}">
                                {% elseif usua.firstname == app.user.firstname and usua.image == null %}
                                    <img src="{{ asset('page/assets/images/anonimouser.png') }}" class="img-radius" alt="{{ app.user.firstname }}">
                                {% endif %}
                            {% endfor %}
                            <span>
                                Hola {{ app.user.firstname }}!
                            </span>
                            <i class="feather icon-chevron-down"></i>
                        </div>
                        <ul class="show-notification profile-notification dropdown-menu" data-dropdown-in="fadeIn" data-dropdown-out="fadeOut">
                            <li>
                                <a href="#!">
                                    <i class="feather icon-calendar"></i> Mi Calendario
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('user_perfil') }}">
                                    <i class="feather icon-user"></i> Mi Perfil de Usuario
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('app_chat') }}">
                                    <i class="feather icon-mail"></i> Mi Chat
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('app_logout') }}">
                                    <i class="feather icon-log-out"></i> Salir
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</nav>