{{ form_start(form) }}
<div class="form-group row">
    {% if(form_errors(form.page_name)) %}
        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>{{ form_errors(form.page_name) }}</strong>
        </div>
    {% endif %}
    <label class="col-sm-3 col-form-label">{{ form_label(form.page_name, 'Nombre del Blog * :') }}</label>
    <div class="col-sm-5">
        {{ form_widget(form.page_name, { 'attr': { 'class': 'form-control validate[required]', 'required': 'required', 'placeholder': 'Nombre del Blog' } }) }}
    </div>
</div>

