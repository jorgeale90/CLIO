{{ form_start(form) }}
<div class="form-group row">
    {% if(form_errors(form.nombre)) %}
        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>{{ form_errors(form.nombre) }}</strong>
        </div>
    {% endif %}
    <label class="col-sm-2 col-form-label">{{ form_label(form.nombre, 'Causa de Intervención del Objeto * :') }}</label>
    <div class="col-sm-10">
        {{ form_widget(form.nombre, { 'attr': { 'class': 'form-control' } }) }}
    </div>
</div>

<div class="form-group row">
    <label class="col-sm-10"></label>
    <div class="col-sm-12">
        <a href="{{ path('causaintervencionobj_index') }}" style="background-color:transparent" class="btn btn-mat btn-info f-right"><span style="color:#010d0c"><i class="icofont icofont-exchange"></i> Volver al Listado</a>
        <button style="background-color:transparent" class="btn btn-mat btn-info f-right"><span style="color:#010d0c"><i class="icofont icofont-plus"></i> {{ button_label|default('Añadir Causa Intervención') }}</button>
    </div>
</div>
{{ form_end(form) }}