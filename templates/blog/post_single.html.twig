{% extends 'base-blog.html.twig' %}
{% block title %}{{ post.title }}{% endblock %}
{% block body %}
    {% set colWidth = post.imageFile ? 18 : 12 %}
    {% set additionalStyle = not post.imageFile ? "height: unset; padding: 50px 10px 10px 10px; " : "" %}

    <div class="container">
        <div class="jumbotron jumbotron-fluid mb-3 pl-0 pt-0 pb-0 bg-white position-relative">
            <div class="h-100 tofront">
                <div class="row justify-content-between">
                    <div class="col-md-6 pt-6 pb-6 pr-6 align-self-center">
                        <p class="text-uppercase font-weight-bold">
                            <a class="text-danger" href="{{ path('archive_cat', {'category': post.category.name}) }}">{{ post.category.name }}</a>
                        </p>
                        <h1 class="display-4 secondfont mb-3 font-weight-bold">{{ post.title }}</h1>
                        {% if post.subheading %}
                            <p class="mb-3">{{ post.subheading }}</p>
                        {% endif %}
                        <div class="d-flex align-items-center">
                            {% if post.user.image != null %}
                                <img class="rounded-circle" src="{{ vich_uploader_asset(post.user, 'imageFile', 'App\\Entity\\User') }}" width="70">
                            {% elseif  post.user.image == null %}
                                <img src="{{ asset('dashboard/img/user.png') }}" width="70">
                            {% endif %}
                            <small class="ml-2">{{ post.user.nombrecompleto }} <span class="text-muted d-block">{{ post.dateCreated | time_ago }}</span>
                            </small>
                        </div>
                    </div>
                    <div class="col-md-6 pr-0">
                        <img src="{{ vich_uploader_asset(post, 'imageFile', 'App\\Entity\\Post') }}" width="560" height="700">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container pt-4 pb-4">
        <div class="row justify-content-center">
            <div class="col-lg-2 pr-4 mb-4 col-md-12">
                <div class="sticky-top text-center">
                    {% if post.sharingicons %}
                    <div class="text-muted">
                        Compartir
                    </div>
                    {% endif %}
                    <div class="share d-inline-block">
                        {% if post.sharingicons %}
                        <!-- AddToAny BEGIN -->
                        <div class="a2a_kit a2a_kit_size_32 a2a_default_style">
                            <a class="a2a_dd" href="https://www.addtoany.com/share"></a>
                            <a class="a2a_button_facebook"></a>
                            <a class="a2a_button_twitter"></a>
                        </div>
                        <script async src="{{ asset('blog/assets/page.js') }}"></script>
                        <!-- AddToAny END -->
                        <br>
                        {% endif %}
                        {% if is_granted('ROLE_ADMIN') and post.getUser().getId() == app.user.id %}
                            <div class="text-muted">
                                Acci√≥n
                            </div>
                            <hr>
                            <a href="{{ path('post_edit', {'id': post.id}) }}" class="btn btn-success btn-sm"><li class="fa fa-edit"> Editar</li></a>
                            <br>
                            <br>
                            <a href="{{ path('delete', {'id': post.id}) }}" class="btn btn-success btn-sm"><li class="fa fa-trash"> Eliminar</li></a>
                            <hr>
                            <p>&nbsp;&nbsp;{{ post.viewCount }} Vistas</p>
                            <p>&nbsp;&nbsp;<a href="#comments">{{ post.comments | length }} Comentarios</a></p>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="col-md-12 col-lg-8">
                <article class="article-post">
                    {{ post.content | raw }}
                </article>
{#                <div class="border p-5 bg-lightblue">#}
{#                    <div class="row justify-content-between">#}
{#                        <div class="col-md-5 mb-2 mb-md-0">#}
{#                            <h5 class="font-weight-bold secondfont">Become a member</h5>#}
{#                            Get the latest news right in your inbox. We never spam!#}
{#                        </div>#}
{#                        <div class="col-md-7">#}
{#                            <div class="row">#}
{#                                <div class="col-md-12">#}
{#                                    <input type="text" class="form-control" placeholder="Enter your e-mail address">#}
{#                                </div>#}
{#                                <div class="col-md-12 mt-2">#}
{#                                    <button type="submit" class="btn btn-success btn-block">Subscribe</button>#}
{#                                </div>#}
{#                            </div>#}
{#                        </div>#}
{#                    </div>#}
{#                </div>#}

                <div class="card-block b-b-theme b-t-theme social-msg">
                    {% if alreadyMarked == false %}
                        <a href="{{ url('post_mark', {'id': post.id, 'bool': 0}) }}">
                            <span class="fa fa-arrow-down text-danger"></span>
                        </a>
                    {% else %}
                        <span class="fa fa-arrow-down text-dark"></span>
                    {% endif %}

                    {% if mark > 0 %}
                        <span style="color:#3c763d;">{{ mark }}</span>
                    {% elseif mark < 0 %}
                        <span style="color:#a94442;">{{ mark }}</span>
                    {% else %}
                        {{ mark }}
                    {% endif %}

                    {% if alreadyMarked == false %}
                        <a href="{{ url('post_mark', {'id': post.id, 'bool': 1}) }}">
                            <span class="fa fa-arrow-up  text-success" ></span>
                        </a>
                    {% else %}
                        <span class="fa fa-arrow-up text-dark" ></span>
                    {% endif %}
                </div>
                <b>Tags: </b>
                {% for tag in post.tags %}
                    <a href="{{ path('tag_single', {'tag': tag}) }}" class="tag">{{ tag }}</a>{{ loop.index != post.tags | length ? ',' : '' }}
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="comments">
        {% if post.allowComments %}
            <div class="container">
                <div class="row">
                    <div class="col-md-9 col-12">
                        {# COMMENTS SECTION #}
                        <div id="comments">
                            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MODERATOR') or is_granted('ROLE_CLIENT') %}
                                {{ form_start(comment_form) }}
                                {{ form_widget(comment_form) }}
                                {{ form_end(comment_form) }}
                                <br>
                                <br>
                            {% else %}
                                <a href="{{ path('app_login') }}" class="btn btn-primary btn-sm">Ingrese para dejar un comentario</a><br><br>
                                <hr>
                            {% endif %}

                            {% if comments | length > 0 %}
                                <div class="comment">
                                    <h5 class="font-weight-bold spanborder"><span>{{ comments | length }} Comentario{% if comments | length != 1 %}s{% endif %}</span></h5>
                                </div>
                            <div class="border p-5 bg-lightblue">
                            <div class="row justify-content-between">
                                {% for comment in comments %}
                                    {% if comment.state %}
                                        <div class="comment col-md-12" id="comment-{{ comment.id }}">
                                            <h5>{{ comment.user.username }}</h5>
                                            <small><i>&nbsp; {{ comment.dateCreated | time_ago }}</i></small><br>
                                            <p>{{ comment.comment | nl2br }}</p>
                                            {% if commentMarkRepository.alreadyVoted(comment, app.user) == false %}
                                                <a href="{{ url('comment_mark', {'id': comment.id, 'bool': 0}) }}">
                                                    <span class="fa fa-arrow-down text-danger"></span>
                                                </a>
                                            {% else %}
                                                <span class="fa fa-arrow-down text-dark"></span>
                                            {% endif %}

                                            {% if commentMarkRepository.countMarkValue(comment) > 0 %}
                                                <span style="color:#3c763d;">{{ commentMarkRepository.countMarkValue(comment) }}</span>
                                            {% elseif commentMarkRepository.countMarkValue(comment) < 0 %}
                                                <span style="color:#a94442;">{{ commentMarkRepository.countMarkValue(comment) }}</span>
                                            {% else %}
                                                {{ commentMarkRepository.countMarkValue(comment) }}
                                            {% endif %}

                                            {% if commentMarkRepository.alreadyVoted(comment, app.user) == false %}
                                                <a href="{{ url('comment_mark', {'id': comment.id, 'bool': 1}) }}">
                                                    <span class="fa fa-arrow-up text-success"></span>
                                                </a>
                                            {% else %}
                                                <span class="fa fa-arrow-up text-dark"></span>
                                            {% endif %}
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                            </div>
                            {% else %}
                                <p class="faded">Se el primero en comentar</p>
                            {% endif %}
                            {# END COMMENTS SECTION #}
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>

    <div class="container pt-4 pb-4">
        <h5 class="font-weight-bold spanborder"><span>Otras Publicaciones</span></h5>
        <div class="row">
            {% if posts %}
                {% set break = false %}
                {% for post in posts %}
                    {% if not break %}
                        <div class="col-lg-6">
                            <div class="card border-0 mb-4 box-shadow h-xl-300">
                                <div style="background-image: url({{ vich_uploader_asset(post, 'imageFile', 'App\\Entity\\Post') }}); height: 150px;    background-size: cover;    background-repeat: no-repeat;"></div>
                                <div class="card-body px-0 pb-0 d-flex flex-column align-items-start">
                                    <h2 class="h4 font-weight-bold">
                                        <a class="text-dark" href="{{ path('post_single', {'slug': post.slug}) }}">{{ post.title }}</a>
                                    </h2>
                                    <p class="card-text">
                                        {{ post.content | excerpt(25, '...') }}
                                    </p>
                                    <div>
                                        <small class="d-block"><a class="text-muted" href="#">{{ post.user.username }}</a></small>
                                        <small class="text-muted">{{ post.dateCreated | time_ago }}</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% if loop.index == 1 %}
                            {% set break = true %}
                        {% endif %}
                    {% endif %}
                {% endfor %}
            {% else %}
                <div class="col-md-12 col-12">
                    <p class="lead text-center">Lo sentimos!!! No encontramos Post :(</p>
                </div>
            {% endif %}
            <div class="col-lg-6">
                <div class="flex-md-row mb-4 box-shadow h-xl-300">
                    {% if posts | length > 1 %}
                        {% set break = false %}
                        {% for post in posts %}
                            {% if not break %}
                                {% if loop.index > 1 %}
                                    <div class="mb-3 d-flex align-items-center">
                                        <img height="80" src="{{ vich_uploader_asset(post, 'imageFile', 'App\\Entity\\Post') }}" width="130" height="50">
                                        <div class="pl-3">
                                            <h2 class="mb-2 h6 font-weight-bold">
                                                <a class="text-dark" href="{{ path('post_single', {'slug': post.slug}) }}">{{ post.title }}</a>
                                            </h2>
                                            <div class="card-text text-muted small">
                                                {{ post.user.username }}
                                            </div>
                                            <small class="text-muted">{{ post.dateCreated | time_ago }}</small>
                                        </div>
                                    </div>
                                    {% if loop.index == 4 %}
                                        {% set break = true %}
                                    {% endif %}
                                {% endif %}
                            {% endif %}
                        {% endfor %}
                    {% else %}
{#                        <div class="col-md-12 col-12">#}
{#                            <p class="lead text-center">Lo sentimos!!! No encontramos Post :(</p>#}
{#                        </div>#}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}