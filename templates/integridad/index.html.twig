{% extends 'base.html.twig' %}
{% block titlepage %}Integridad{% endblock %}
{% block page_header %}
    <div class="card">
        <div class="card-block front-icon-breadcrumb row">
            <div class="breadcrumb-header col">
                <div class="d-inline-block">
                    <h5>Configuraci칩n General</h5>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="page-header-breadcrumb">
                    <ul class="breadcrumb-title">
                        <li class="breadcrumb-item"><a href="#!">Configuraci칩n General</a>
                        </li>
                        <li class="breadcrumb-item active"><a href="#!">Listado Integridad</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block contenido %}
    <div class="col-sm-12">
        <!-- HTML5 Export Buttons table start -->
        <div class="card">
            <div class="card-header">
                <h5><strong>Listado</strong> de Integridades</h5>
                <div class="dropdown-inverse dropdown open f-right">
                    <button class="btn dropdown-toggle waves-effect waves-light" style="background-color:transparent" type="button" id="dropdown-7" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"><i class="icofont icofont-upload-alt"></i>Exportar</button>
                    <div class="dropdown-menu" aria-labelledby="dropdown-7" data-dropdown-in="fadeIn" data-dropdown-out="fadeOut">
                        <a href="#" class="dropdown-item waves-light waves-effect"><i class="icofont icofont-file-pdf"></i> <strong> Exportar</strong> PDF</a>
                        <a href="#" class="dropdown-item waves-light waves-effect"><i class="icofont icofont-file-excel"></i> <strong> Exportar</strong> EXCEL</a>
                    </div>
                </div>
                <a href="">
                    <button type="button" style="background-color:transparent" name="reset-filter" id="btn-reset-filtros" class="btn f-right"><i
                                class="icofont icofont-refresh"></i>Refrescar
                    </button>
                </a>
                <a href="{{ path('integridad_new') }}">
                    <button type="button" style="background-color:transparent" class="btn f-right"><i
                                class="icofont icofont-file-alt"></i><strong> A침adir</strong> Integridad
                    </button>
                </a>
            </div>
            <div class="card-block">
                <div class="dt-responsive table-responsive">
                    <table id="alt-pg-dt" class="table">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Integridad</th>
                            <th>Acci칩n</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for integridad in integridades %}
                            <tr>
                                <td>{{ integridad.id }}</td>
                                <td>{{ integridad.nombre }}</td>
                                <td>
                                    <a class="btn btn-mat btn-info" style="background-color:transparent" href="{{ path('integridad_edit', {'id': integridad.id}) }}"><span style="color:#010d0c" ;><i class="icofont icofont-edit"></i> Editar</a>
                                    <a class="btn btn-mat btn-danger btn-delete-entity" style="background-color:transparent" href="{{ path('removerintegridad', {'id' : integridad.id}) }}"><span style="color:#010d0c" ;><i class="icofont icofont-ui-delete"></i> Eliminar</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- HTML5 Export Buttons table end -->
    </div>
    <!-- Page-body end -->
{% endblock %}
{% block javascript %}
<script>
    $(function () {
        {% for notice_level in ['success','error','info', 'warning'] %}
        {% set session_var = 'app_' ~ notice_level %}
        {% if app.session.flashbag.has(session_var) %}
            {% for flash in app.session.flashbag.get(session_var) %}
            noty({
                text: '{{ flash }}',
                progressBar : true,
                layout      : 'topRight',
                dismissQueue: true,
                timeout     : 5000,
                closeWith   : ['click'],
                theme       : 'relax',
                type        : '{{ notice_level }}',
                maxVisible  : 10,
                animation   : {
                            open  : 'animated bounceInRight',
                            close : 'animated bounceOutRight',
                            easing: 'swing',
                            speed : 500
                        }
                    });
            {% endfor %}
        {% endif %}
    {% endfor %}
});

$(document).ready(function(){
    $('.btn-delete-entity').click(function(e){
        e.preventDefault();
        var url = $(this).prop('href');
        if(confirm('Estas seguro de eliminar esta Integridad?')){
            window.location = url;
        }
    })
});
</script>
{% endblock %}