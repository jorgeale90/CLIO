                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="page-header-breadcrumb">
                    <ul class="breadcrumb-title">
                        <li class="breadcrumb-item"><a href="#!">Sitio</a>
                        </li>
                        <li class="breadcrumb-item active"><a href="#!">Listado Sitio Patrimonial</a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="task col-lg-12">
                <div class="task-right-header-status">
                    <span data-toggle="collapse">Busqueda Avanzada</span>
                    <i class="icofont icofont-rounded-down f-right"></i>
                </div>
                <!-- end of sidebar-header completed status-->
                <div class="taskboard-right-progress" style="display: none;">
                    <form method="get" action=".">
                        <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-sm-10">{{ form_label(form.codigo, 'Código del Sitio:') }}</label>
                                        <div class="col-sm-10">
                                            {{ form_widget(form.codigo, { 'attr': { 'class': 'form-control', 'placeholder': 'Código del Sitio' } }) }}
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-10">{{ form_label(form.categoria, 'Categoría del Sitio :') }}</label>
                                        <div class="col-sm-10">
                                            {{ form_widget(form.categoria) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-sm-10">{{ form_label(form.nombre, 'Nombre del Sitio :') }}</label>
                                        <div class="col-sm-10">
                                            {{ form_widget(form.nombre, { 'attr': { 'class': 'form-control', 'placeholder': 'Nombre del Sitio' } }) }}
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-10">{{ form_label(form.tipositio, 'Tipo de Sitio :') }}</label>
                                        <div class="col-sm-10">
                                            {{ form_widget(form.tipositio) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <div class="form-group">
                            <label class="col-sm-10"></label>
                            <div class="col-sm-12">
                                <button type="submit" name="submit-filter" value="filter" class="btn btn-mat btn-dark f-right"><i
                                            class="icofont icofont-search-alt-1"></i> Avanzada
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block contenido %}
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h5>Sitio Patrimonial</h5>
                <div class="dropdown-inverse dropdown open f-right">
                    <button class="btn dropdown-toggle waves-effect waves-light" style="background-color:transparent" type="button" id="dropdown-7" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"><i class="icofont icofont-edit-alt"></i>Exportar</button>
                    <div class="dropdown-menu" aria-labelledby="dropdown-7" data-dropdown-in="fadeIn" data-dropdown-out="fadeOut">
                        <a class="dropdown-item waves-light waves-effect" href="#"><i class="icofont icofont-file-pdf"></i> PDF</a>
                        <a class="dropdown-item waves-light waves-effect" href="#"><i class="icofont icofont-file-excel"></i> Excel</a>
                    </div>
                </div>
                <a href="{{ path('sitiopatrimonial_index') }}">
                    <button type="button" name="reset-filter" class="btn f-right" style="background-color:transparent" id="btn-reset-filtros"><i class="icofont icofont-refresh"></i>Refrescar</button>
                </a>
                <a href="{{ path('sitiopatrimonial_new') }}">
                    <button type="button" style="background-color:transparent" class="btn f-right"><i
                                class="icofont icofont-file-alt"></i><strong> Añadir</strong> Sitio Patrimonial
                    </button>
                </a>
            </div>
            <div class="card-block tab-icon">
                <ul class="nav nav-tabs md-tabs " role="tablist">
                    <li class="nav-item">
