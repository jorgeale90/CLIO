                                            <a class="dropdown-toggle addon-btn" data-toggle="dropdown" aria-expanded="true">
                                                <i class="icofont icofont-ui-settings"></i>
                                            </a>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <button class="dropdown-item mostrar" value="{{ path('sitiopatrimonial_show', {'id': sitio.id}) }}"><i class="icofont icofont-eye-alt"></i>Mostrar</button>
                                                <button class="dropdown-item editar" value="{{ path('sitiopatrimonial_edit', {'id': sitio.id}) }}" title="Editar"><i class="icofont icofont-ui-edit"></i>Editar</button>
                                                <div role="separator" class="dropdown-divider"></div>
                                                <button class="dropdown-item eliminar" value="{{ path('removersitiopatrimonial', {'id' : sitio.id}) }}"><i class="icofont icofont-trash"></i>Eliminar</button>
                                            </div>
                                        </td>
                                    </tr>
                                    {% endif %}
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="navigation">
                            <ul class="pagination justify-content-lg-end m-0">
                                {{ knp_pagination_render(pagination) }}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="md-modal md-effect-1" id="modal-19">
        <div class="md-content md-content-white">
            <h3><i class="icofont icofont-warning"></i> Advertencia</h3>
            <div>
                <h5 id="mensaje"></h5>
            </div>
            <div class="row">
                <div class="col-sm-3"></div>
                <div class="col-sm-3">
                    <button class="btn btn-primary aceptar">Aceptar</button>
                </div>
                <div class="col-sm-3">
                    <button class="btn btn-inverse cancelar" onclick="$('#modal-19').removeClass('md-show')">
                        Cancelar
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="md-overlay"></div>
{% endblock %}
{% block carousel %}
<div class="card">
    <div class="card-block">
        <div class="swiper-container">
            <div class="swiper-wrapper">
                {% for s in sitio %}
                <div class="swiper-slide" style="width: 300.2px; margin-right: 50px;">
                    <div class="col-xl-9 col-md-20">
                        <div class="row align-items-center m-l-12">
                            <div class="col-auto">
                                <i class="feather icon-folder f-30 text-c-lite-green"></i>
                            </div>
                            <div class="col-lg-auto">
                                <h6 class="text-muted m-b-10">{{ s.nombre | raw }}</h6>
                                <h2 class="m-b-0">{{ s.sitiopatrimonial | length }}</h2>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
                <!-- end of swiper-slide -->
            </div>
            <!-- end of swipper-wrapper -->
        </div>
    </div>
</div>
{% endblock %}
{% block javascript %}
    <!-- owl carousel 2 js -->
    <script type="text/javascript" src="{{ asset('page/bower_components/owl.carousel/js/owl.carousel.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('page/assets/js/owl-custom.js') }}"></script>
    <!-- swiper js -->
    <script type="text/javascript" src="{{ asset('page/bower_components/swiper/js/swiper.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('page/assets/js/swiper-custom.js') }}"></script>
    <!-- task board js -->
    <script type="text/javascript" src="{{ asset('page/assets/pages/task-board/task-board.js') }}"></script>
    <!-- modal efect js -->
    <script src="{{ asset('page/modal/js/modalEffects.js') }}"></script>
    <script src="{{ asset('page/modal/js/classie.js') }}"></script>
    <script>
    $(function () {
        {% for notice_level in ['success','error','info', 'warning'] %}
        {% set session_var = 'app_' ~ notice_level %}
        {% if app.session.flashbag.has(session_var) %}
        {% for flash in app.session.flashbag.get(session_var) %}
        noty({
            text: '{{ flash }}',
            progressBar : true,
            layout      : 'topRight',
            dismissQueue: true,
            timeout     : 5000,
            closeWith   : ['click'],
            theme       : 'relax',
            type        : '{{ notice_level }}',
            maxVisible  : 10,
            animation   : {
                open  : 'animated bounceInRight',
                close : 'animated bounceOutRight',
                easing: 'swing',
                speed : 500
            }
        });
        {% endfor %}
        {% endif %}
        {% endfor %}
    });

    var elems = Array.prototype.slice.call(document.querySelectorAll('.js-small-new'));

    elems.forEach(function (html) {
        var switchery = new Switchery(html, {color: '#4680ff', jackColor: '#fff', size: 'small'});
        $(html).on('change', function () {
            $.ajax({
                url: '{{ path('activate_sitiopatrimonial') }}',
                path: 'post',
                data: {value: html.checked, id: $(this).data('value')},
                success: function (res) {
                    if (res.response === 'new') {
                        window.location = "{{ path('sitiopatrimonial_index') }}";
                    }
                    notifierNoty(res.message, 'success');
                },
                error: function (error) {
                    console.log(error)
                }
            })
        })
    });


    $('.editar').on('click', function () {
        var link = $(this).val();
        $('#modal-19').addClass('md-show');
        $('#mensaje').text('Estas seguro que quieres editar este Sitio Patrimonial?');
        $('.aceptar').on('click', function () {
            window.location = link;
        });
    });

    $('.eliminar').on('click', function () {
        var link = $(this).val();
        $('#modal-19').addClass('md-show');
        $('#mensaje').text('Estas seguro que quieres eliminar este Sitio Patrimonial?');
        $('.aceptar').on('click', function () {
            window.location = link;
        });
    });

    $('.mostrar').on('click', function () {
        window.location = $(this).val();
    });
    </script>
{% endblock %}