                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#profile7" role="tab"><i class="icofont icofont-plus "></i>Nuevos Sitios Patrimoniales <span class="pcoded-badge label label-success">{{ sitiopatrimonialNew | length }}</span></a>
                        <div class="slide"></div>
                    </li>
                </ul>
                <div class="tab-content card-block">
                    <div class="tab-pane active" id="home7" role="tabpanel">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Código</th>
                                    <th>Nombre</th>
                                    <th>Tipo de Sitio</th>
                                    <th>Provincia</th>
                                    <th>Municipio</th>
                                    <th>Estado</th>
                                    <th>Acción</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for sitio in pagination %}
                                    {% if not sitio.new %}
                                    <tr>
                                        <td>{{ sitio.codigo }}</td>
                                        <td>{{ sitio.nombre }}</td>
                                        <td>{{ sitio.tipositio }}</td>
                                        <td>{{ sitio.provincia }}</td>
                                        <td>{{ sitio.municipio }}</td>
                                        <td data-toggle="tooltip" data-placement="right" title="Activar/Desactivar Sitio"><input type="checkbox" data-value="{{ sitio.id }}"
                                                                                                                                 class="js-small-new" {% if sitio.state %} checked {% endif %}></td>
                                        <td>
                                            <a class="dropdown-toggle addon-btn" data-toggle="dropdown" aria-expanded="true">
                                                <i class="icofont icofont-ui-settings"></i>
                                            </a>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <button class="dropdown-item mostrar" value="{{ path('sitiopatrimonial_show', {'id': sitio.id}) }}"><i class="icofont icofont-eye-alt"></i>Mostrar</button>
                                                <button class="dropdown-item editar" value="{{ path('sitiopatrimonial_edit', {'id': sitio.id}) }}" title="Editar"><i class="icofont icofont-ui-edit"></i>Editar</button>
                                                <div role="separator" class="dropdown-divider"></div>
                                                <button class="dropdown-item eliminar" value="{{ path('removersitiopatrimonial', {'id' : sitio.id}) }}"><i class="icofont icofont-trash"></i>Eliminar</button>
                                            </div>
                                        </td>
                                    </tr>
                                    {% endif %}
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="tab-pane" id="profile7" role="tabpanel">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Código</th>
                                    <th>Nombre</th>
                                    <th>Tipo de Sitio</th>
                                    <th>Provincia</th>
                                    <th>Municipio</th>
                                    {% if not is_granted('ROLE_ESPECIALISTA') %}
                                        <th>Estado</th>
                                    {% endif %}
                                    <th>Acción</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for sitio in pagination %}
                                    {% if sitio.new %}
                                    <tr>
                                        <td>{{ sitio.codigo }}</td>
                                        <td>{{ sitio.nombre }}</td>
                                        <td>{{ sitio.tipositio }}</td>
                                        <td>{{ sitio.provincia }}</td>
                                        <td>{{ sitio.municipio }}</td>
                                        {% if not is_granted('ROLE_ESPECIALISTA') %}
                                            <td data-toggle="tooltip" data-placement="right" title="Activar Sitio"><input type="checkbox" data-value="{{ sitio.id }}"
